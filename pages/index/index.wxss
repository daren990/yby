/**index.wxss**/
.page_hd{
  position: fixed;
  line-height: 36px;
  width: 100%;
  border-bottom: 2px solid gainsboro;
  z-index: 2;
  background: #fff;
}
.page_bd{
    width: 100%;
    padding-top: 40px;
}
.hd_left{
  float: left;
  width: 50%;
  text-align: center;
}
.hd_left view{
    display: inline-block;
    padding: 0 10px;
}
.click_bottom{
    border-bottom: 2px solid red;
}
.page_bd .bd_bd{
    width: 100%;
    background:gainsboro;
}
.page_bd .left_bd{
    width: 100%;
    margin-bottom: 10px;
    background: #fff;
    padding: 8px;
}
.left_bd .zuo{
    width: 20%;
    float: left;
}
.zuo image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-size: cover;
}
.left_bd .you{
    width: 80%;
    float: right;
}
.you_top{
    line-height: 26px;
    font-size: .8em;
}
.you_top .top_left{
    width: 70%;
    float: left;
}
.you_top .top_right{
    width: 30%;
    float: left;
}
.top_right .mony{
    display: inline;
    font-size: 1.4em;
    color: red;
}
.top_left image{
    width: 30rpx;
    height:30rpx;
    position: relative;
    top: 4rpx;
}
.you .you_bd{
    width: 100%;
    height: auto;
    max-height: 90px;
    overflow: hidden;
}
.you_bd view{
    float: left;
    padding: 6rpx 8rpx;
    background: #fff;
    color: red;
    border: 1px solid red;
    border-radius:20rpx;
    font-size: .6em;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}
.you_img{
    width: 100%;
    height: 170rpx;
    overflow: hidden;
}
.you_img image{
    width:28%;
    height: 160rpx;
    margin-right: 20rpx;
}
.you_foot{
    font-size: .8em;
    color:gray;
}
.right_bd{
    width: 100%;
    height: 100%;
    padding: 8px;
}
.weui-flex {
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.weui-cells {
  margin-top: 0;
  opacity: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  -webkit-transition: .3s;
  transition: .3s;
}
.weui-cells:before,
.weui-cells:after {
  display: none;
}
.weui-cells_show {
  opacity: 1;
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.weui-cell:before {
  right: 15px;
}
.kind-list__item {
  margin: 10px 0;
  background-color: #FFFFFF;
  border-radius: 2px;
  overflow: hidden;
}
.kind-list__item:first-child {
  margin-top: 0;
}
.kind-list__img {
  width: 30px;
  height: 30px;
}
.kind-list__item-hd {
  padding: 20px;
  -webkit-transition: opacity .3s;
  transition: opacity .3s;
}
.kind-list__item-hd_show {
  opacity: .4;
}
.kind-list__item-bd {
  height: 0;
  overflow: hidden;
}
.kind-list__item-bd_show {
  height: auto;
}
.img_item {
  width: 48%;
  margin: 1%;
  display: inline-block;
  vertical-align: top;
}
.body{
    background: #fff;
    margin-bottom: 16rpx;
}
.name{
    padding: 10rpx;
    font-size: .8em;
    line-height: 40rpx;
}
.name image{
    width: 30rpx;
    height: 30rpx;
    float: right;
}
.name_foot{
    padding:0 10rpx;
    line-height: 40rpx;
    padding-bottom: 10rpx;
}
.name_foot span{
    font-size: .6em;
    color: #fff;
    background: orange;
    padding: 4rpx;
    border-radius: 4rpx;
}
.name_foot .name_mony{
    font-size: .6em;
    float: right;
}
.name_mony text{
    font-size: 1.2em;
    color: red;
}