/**index.wxss**/
.page_hd{
  position: fixed;
  line-height: 36px;
  width: 100%;
  border-bottom: 2px solid gainsboro;
}
.page_bd{
    width: 100%;
    padding-top: 40px;
}
.hd_left{
  float: left;
  width: 50%;
  text-align: center;
}
.hd_left view{
    display: inline-block;
    padding: 0 10px;
    border-bottom: 2px solid red;
}
.page_bd .bd_bd{
    width: 100%;
    background: silver;
}
.page_bd .left_bd{
    width: 100%;
    margin-bottom: 10px;
    background: #fff;
    padding: 8px;
}
.left_bd .zuo{
    width: 20%;
    float: left;
}
.zuo image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background-size: cover;
}
.left_bd .you{
    width: 80%;
    float: right;
}
.you_top{
    line-height: 26px;
    font-size: .8em;
}
.you_top .top_left{
    width: 70%;
    float: left;
}
.you_top .top_right{
    width: 30%;
    float: left;
}
.top_right .mony{
    display: inline;
    font-size: 1.4em;
    color: red;
}
.top_left image{
    width: 30rpx;
    height:30rpx;
    position: relative;
    top: 4rpx;
}
.you .you_bd{
    width: 100%;
    height: auto;
    max-height: 90px;
    overflow: hidden;
}
.you_bd view{
    float: left;
    padding: 6rpx 8rpx;
    background: #fff;
    color: red;
    border: 1px solid red;
    border-radius:20rpx;
    font-size: .6em;
    margin-right: 20rpx;
    margin-bottom: 20rpx;
}